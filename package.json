  "name": "dotest",
  "version": "1.12.1",
  "description": "Yet another unit test runner",
  "main": "index.js",
  "tonicExampleFilename": "example.js",
  "files": [
    "example.js",
    "index.js"
  ],
  "scripts": {
    "test": "st=0; eslint . || st=1; node test.js || st=1; exit $st",
    "ci-test": "st=0; eslint . || st=1; istanbul cover test.js --report lcovonly --print none || st=1; if [ \"$TRAVIS_BRANCH\" -eq \"master\" ]; then codeclimate-test-reporter < ./coverage/lcov.info; fi; exit $st"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/fvdm/nodejs-dotest.git"
  },
  "bugs": {
    "url": "https://github.com/fvdm/nodejs-dotest/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.1",
    "eslint": "^2.10.2",
    "istanbul": "^0.4.3"
  },
  "optionalDependencies": {},
  "engines": {
    "node": ">=0.12"
  },
  "keywords": [
    "test",
    "unittest"
  ],
  "license": "Unlicense"
}
